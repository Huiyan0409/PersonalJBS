<%- include('bootheader') -%>
<%- include('menubar') -%>
    <div class="jumbotron">
        <h1>Tutee Comment Form</h1>
        <p>Please add comments to your tutee here</p>
    </div>

    <form method="post" action="/tuteeprocess">
      Tutee's/Parent's name: <input type="text" name="tuteeName1"><br>
      <br>
      <br>
      Tutor's name: <input type="text" name="tutorName1"><br>
      <br>
      <br>
      Score for your Student: <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="inlineRadioOptionsStudent" id="inlineRadio1" value="5">
          <label class="form-check-label" for="inlineRadio1">5</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="inlineRadioOptionsStudent" id="inlineRadio2" value="4">
          <label class="form-check-label" for="inlineRadio2">4</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="inlineRadioOptionsStudent" id="inlineRadio3" value="3" >
          <label class="form-check-label" for="inlineRadio3">3</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="inlineRadioOptionsStudent" id="inlineRadio3" value="2" >
          <label class="form-check-label" for="inlineRadio3">2</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="inlineRadioOptionsStudent" id="inlineRadio3" value="1" >
          <label class="form-check-label" for="inlineRadio3">1</label>
        </div>
        <br>
        <br>
        <br>
        Score for Parent: <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="inlineRadioOptionsParent" id="inlineRadio1" value="5">
            <label class="form-check-label" for="inlineRadio1">5</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="inlineRadioOptionsParent" id="inlineRadio2" value="4">
            <label class="form-check-label" for="inlineRadio2">4</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="inlineRadioOptionsParent" id="inlineRadio3" value="3" >
            <label class="form-check-label" for="inlineRadio3">3</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="inlineRadioOptionsParent" id="inlineRadio3" value="2" >
            <label class="form-check-label" for="inlineRadio3">2</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="inlineRadioOptionsParent" id="inlineRadio3" value="1" >
            <label class="form-check-label" for="inlineRadio3">1</label>
          </div>
          <br>
          <br>
          <br>
      Comment: <textarea rows="4" cols="50" name ="comment1"></textarea><br>
      <br>
      <br>
      <% if(loggedIn){ %>
        <input type="submit">
        <% } else { %>
          You must be logged in to submit form info.
          <% } %>

    </form>

<%- include('bootfooter') -%>
